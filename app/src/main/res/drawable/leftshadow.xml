<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:endColor="@color/material_dynamic_neutral_variant0"

                android:angle="0"/>
        </shape>
    </item>
    <!-- Shadow-like effect on the right side -->
    <item android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#00B3A7" />
        </shape>
    </item>
</layer-list>