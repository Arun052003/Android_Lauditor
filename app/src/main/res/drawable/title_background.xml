<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:drawable="@drawable/softwaves"></item>
    <item>
        <shape
            android:shape="rectangle">

            <corners android:radius="0dp"/>

            <gradient
                android:angle="180"
                android:endColor="#004D87"
                android:centerColor="#004D87"
                android:startColor="#00355C"
                android:type="linear"/>

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>

            <stroke
                android:width="1dp"
                android:color="#123"/>

        </shape>
    </item>

</layer-list>