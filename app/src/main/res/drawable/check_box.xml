<?xml version="1.0" encoding="utf-8"?><!-- checkbox_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Checked state -->
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:radius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <gradient android:angle="45" android:centerColor="@color/white" android:endColor="@color/white" android:startColor="@color/white" android:type="linear" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
            <stroke android:width="1dp" android:color="@color/grey_color_dark" />
        </shape>
    </item>

</selector>
