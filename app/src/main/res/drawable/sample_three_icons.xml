<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Large red circle -->
    <item>
        <shape
            android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="@color/Blue_text_color" />
            <solid android:color="@color/Blue_text_color" />
            <size
                android:width="@dimen/small_size"
                android:height="@dimen/small_size"/>
        </shape>
    </item>

    <!-- Small black circle -->
    <item android:right="3dp"
        android:left="-3dp"
        android:top="3dp"
        android:bottom="-3dp">

        <shape android:shape="oval">
            <stroke android:color="@android:color/transparent"
                android:width="15dp"/>
            <solid android:color="#000"/>
            <size
                android:width="3dp"
                android:height="3dp"/>
        </shape>
    </item>
</layer-list>