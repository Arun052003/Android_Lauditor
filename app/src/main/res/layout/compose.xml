<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
    <LinearLayout
        android:id="@+id/new_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBE4E4"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_message"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints,NotSibling"
        tools:layout_editor_absoluteX="16dp">

        <!-- ImageView for Attachment -->
        <ImageView
            android:id="@+id/attachments"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:padding="8dp"
            android:src="@drawable/attachment"
            app:layout_constraintEnd_toStartOf="@+id/send_button"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="600dp" />

        <!-- Send Button with Corner Radius -->
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/rounder_button_blue"
            android:padding="10dp"
            android:text="Send"
            android:alpha="0.5"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints,TouchTargetSizeCheck"
            tools:layout_editor_absoluteX="281dp"
            tools:layout_editor_absoluteY="68dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/new_messagess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="596dp"
        android:background="#EBE4E4"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/new_messagesss"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="900dp"
        android:background="#EBE4E4"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subject_input"
        app:layout_constraintVertical_bias="0.29"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- ImageView for Attachment -->


            <!-- TextView for Text -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="New Message"
                android:gravity="start"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/black"
                android:textSize="28dp"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/attachment"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="8dp"
                android:src="@drawable/simple_icons"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/subject_input"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To:"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="82dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/message_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject:"

        android:layout_gravity="center"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="127dp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/message_inputs"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:inputType="textMultiLine"
        android:maxLines="5"
        app:boxBackgroundMode="none"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="204dp" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/message_inputss"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/white"
            android:inputType="textMultiLine"
            android:maxLines="5"
            tools:ignore="MissingConstraints,TouchTargetSizeCheck,SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="204dp" />
    </com.google.android.material.textfield.TextInputLayout>




</androidx.constraintlayout.widget.ConstraintLayout>