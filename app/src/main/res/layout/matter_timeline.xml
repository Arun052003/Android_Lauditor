<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017">
        <TextView
            android:id="@+id/tv_timeline_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="@color/Blue_text_color"
            android:fontFamily="sans-serif-condensed"
            android:textSize="@dimen/thirty_dp">

        </TextView>
        <TextView
            android:id="@+id/tv_timeline_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:layout_below="@id/tv_timeline_title"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:textSize="@dimen/twenty_dp">

        </TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_timeline_date"

            android:gravity="start"

            >

            <ImageView
                android:id="@+id/iv_dashed_line"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/dashed_line"
                android:layout_gravity="start">

            </ImageView>
            <ImageView
                android:id="@+id/iv_notes"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:visibility="gone"
                android:layout_marginStart="250dp"
                android:layout_toRightOf="@id/iv_dashed_line"
                android:src="@drawable/edit_documents_icon" />

            <ImageView
                android:id="@+id/iv_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="300dp"
                android:layout_toRightOf="@id/iv_dashed_line"
                android:background="@drawable/eye_icon_plain" />
        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>