<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/timeline_c"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/left_space"
    android:layout_marginTop="@dimen/left_space"
    android:layout_marginEnd="@dimen/left_space"
    android:background="@drawable/background_transparent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/small_size"
        android:layout_marginTop="@dimen/left_space"
        android:layout_marginEnd="@dimen/left_space"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/header_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_weight="1.5"
            android:background="@drawable/rectangular_white_background"
            android:ellipsize="end"
            android:fontFamily="@font/gill_sans"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:padding="@dimen/eight_dp"
            android:text="@string/matter_title"
            android:textColor="@color/blue"
            android:textFontWeight="500"
            android:textSize="@dimen/Fifteen_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/left_space"
            android:layout_weight="2"
            android:background="@drawable/background_transparent"
            android:gravity="end">

            <ImageView
                android:id="@+id/close_details"
                android:layout_width="@dimen/forty_dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_gravity="end"
                android:layout_marginEnd="-55dp"
                android:background="@drawable/circular"
                android:contentDescription="@string/tag"
                android:src="@drawable/cancel_white_icon" />

            <ImageView
                android:layout_width="@dimen/forty_dp"
                android:layout_height="@dimen/forty_dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/left_space"
                android:layout_marginTop="@dimen/Fifteen_dp"
                android:layout_marginEnd="@dimen/small_size"
                android:layout_marginBottom="@dimen/left_space"
                android:src="@drawable/calendar_white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_timeLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_size"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="@dimen/small_size"
        android:layout_marginBottom="@dimen/small_size"
        android:background="@drawable/rectangular_white_background"
        android:orientation="vertical"
        android:padding="@dimen/small_size" />

    <!--    <ImageView-->
    <!--        android:id="@+id/cancel"-->
    <!--        android:layout_width="@dimen/forty_dp"-->
    <!--        android:layout_height="@dimen/forty_dp"-->
    <!--        android:layout_gravity="end"-->
    <!--        android:layout_margin="@dimen/left_space"-->
    <!--        android:contentDescription="@string/tag"-->
    <!--        android:src="@drawable/cancel_white_icon" />-->
</LinearLayout>
