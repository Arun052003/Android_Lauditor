<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_matter_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_size"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/left_space"
        android:layout_gravity="center"
        android:paddingTop="@dimen/twenty_dp"

      >

        <TextView
            android:id="@+id/tv_legal_matter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_left_background"
            android:fontFamily="@font/gill_sans"
            android:padding="@dimen/twenty_dp"
            android:text="Legal Matter"
            android:textColor="@color/black"
            android:textSize="@dimen/Fifteen_dp">

        </TextView>

        <TextView
            android:id="@+id/tv_general_matter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:background="@drawable/button_right_background"
            android:fontFamily="@font/gill_sans"
            android:padding="@dimen/twenty_dp"
            android:text="General Matter"
            android:textColor="@color/black"
            android:textSize="@dimen/Fifteen_dp">

        </TextView>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_create_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/small_size"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/left_space"
        android:paddingTop="@dimen/twenty_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_matter_type"
        app:layout_constraintVertical_bias="0.03">

        <TextView
            android:id="@+id/tv_client"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_left_background"
            android:fontFamily="@font/gill_sans"
            android:padding="@dimen/twenty_dp"
            android:text="Create"
            android:textColor="@color/black"
            android:textSize="@dimen/Fifteen_dp">

        </TextView>

        <TextView
            android:id="@+id/tv_firm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:background="@drawable/button_right_background"
            android:fontFamily="@font/gill_sans"
            android:padding="@dimen/twenty_dp"
            android:text="View"
            android:textColor="@color/black"
            android:textSize="@dimen/Fifteen_dp">

        </TextView>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/create_matter_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/Fifty_dp"
        android:paddingTop="@dimen/twenty_dp"
        android:paddingEnd="@dimen/Fifty_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.593"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_create_view"
        app:layout_constraintVertical_bias="0.013">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/siv_matter_icon"
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_weight="1"
                android:background="@color/green_count_color"
                android:fontFamily="@font/gill_sans"
                android:src="@mipmap/single_document_icon"
                android:text="@string/create_group"
                android:textColor="@color/black"
                android:textSize="@dimen/Fifteen_dp"
                app:shapeAppearanceOverlay="@style/Circula">

            </com.google.android.material.imageview.ShapeableImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/siv_matter_icon"
                android:fontFamily="@font/gill_sans"
                android:gravity="left"
                android:text="Matter Information">

            </TextView>

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/siv_groups"
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_weight="1"
                android:background="@color/green_count_color"
                android:fontFamily="@font/gill_sans"
                android:src="@mipmap/groups_material_icon"
                android:text="@string/create_group"
                android:textColor="@color/black"
                android:textSize="@dimen/Fifteen_dp"
                app:shapeAppearanceOverlay="@style/Circula">

            </com.google.android.material.imageview.ShapeableImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/siv_groups"
                android:layout_marginLeft="@dimen/Fifteen_dp"
                android:fontFamily="@font/gill_sans"
                android:gravity="center"
                android:text="View">

            </TextView>

        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/siv_documents"
                android:layout_width="@dimen/sixty_dp"
                android:layout_height="@dimen/sixty_dp"
                android:layout_weight="1"
                android:background="@color/green_count_color"
                android:fontFamily="@font/gill_sans"
                android:src="@mipmap/documents_copy"
                android:text="@string/create_group"
                android:textColor="@color/black"
                android:textSize="@dimen/Fifteen_dp"
                app:shapeAppearanceOverlay="@style/Circula">

            </com.google.android.material.imageview.ShapeableImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/siv_documents"
                android:fontFamily="@font/gill_sans"
                android:gravity="left"
                android:text="@string/documents">

            </TextView>

        </RelativeLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <FrameLayout
        android:id="@+id/child_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_matter_view"
        app:layout_constraintVertical_bias="0.016" />

</androidx.constraintlayout.widget.ConstraintLayout>