<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_month"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/small_size"
    android:background="@drawable/wave"
    app:cardCornerRadius="@dimen/left_space">

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"

        android:orientation="vertical">

        <include
            android:id="@+id/month_matter_name"
            layout="@layout/group_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_size" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/left_space"
                android:layout_weight="2"
                android:gravity="start"
                android:orientation="vertical">

                <include
                    android:id="@+id/timeheets_month"
                    layout="@layout/group_layout" />

                <include
                    android:id="@+id/week1"
                    layout="@layout/group_layout" />

                <include
                    android:id="@+id/week2"
                    layout="@layout/group_layout" />

                <include
                    android:id="@+id/week3"
                    layout="@layout/group_layout" />

                <include
                    android:id="@+id/week4"
                    layout="@layout/group_layout" />

                <include
                    android:id="@+id/week5"
                    layout="@layout/group_layout" />

                <include
                    android:id="@+id/total"
                    layout="@layout/group_layout" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/left_space"
                android:layout_weight="2"
                android:gravity="start"
                android:orientation="vertical">

                <include
                    android:id="@+id/month_billable"
                    layout="@layout/group_layout" />

                <include
                    android:id="@+id/billable1"
                    layout="@layout/group_layout" />

                <include
                    android:id="@+id/billable2"
                    layout="@layout/group_layout" />

                <include
                    android:id="@+id/billable3"
                    layout="@layout/group_layout" />

                <include
                    android:id="@+id/billable4"
                    layout="@layout/group_layout" />

                <include
                    android:id="@+id/billable5"
                    layout="@layout/group_layout" />

                <include
                    android:id="@+id/tot_billable"
                    layout="@layout/group_layout" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/left_space"
                android:layout_weight="2"
                android:gravity="start"
                android:orientation="vertical">

                <include
                    android:id="@+id/month_non_billable"
                    layout="@layout/group_layout" />

                <include
                    android:id="@+id/non_billable1"
                    layout="@layout/group_layout" />

                <include
                    android:id="@+id/non_billable2"
                    layout="@layout/group_layout" />

                <include
                    android:id="@+id/non_billable3"
                    layout="@layout/group_layout" />

                <include
                    android:id="@+id/non_billable4"
                    layout="@layout/group_layout" />

                <include
                    android:id="@+id/non_billable5"
                    layout="@layout/group_layout" />

                <include
                    android:id="@+id/tot_non_billable"
                    layout="@layout/group_layout" />
            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <include layout="@layout/weekly_timesheets" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>