<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/small_size"
    android:padding="@dimen/small_size"
    android:background="@drawable/dashboard_screens_background"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:padding="@dimen/left_space"
        app:layout_constraintBottom_toTopOf="@+id/tv_bhours"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/Fifty_dp"
            android:layout_height="@dimen/Fifty_dp"

            android:layout_gravity="center"
            android:contentDescription="@string/todo"

            android:src="@drawable/tbh" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/gill_sans"
            android:gravity="bottom"
            android:padding="@dimen/small_size"
            android:text="Total Billable Hours"
            android:textColor="@color/Blue_text_color"
            android:textSize="@dimen/thirty_dp" />



    </androidx.appcompat.widget.LinearLayoutCompat>



    <TextView
        android:id="@+id/tv_bhours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/left_space"
        android:fontFamily="@font/gill_sans"
        android:text="500"
        android:textSize="@dimen/Fifty_dp"
        android:textColor="@color/green_count_color"
        app:layout_constraintBottom_toTopOf="@id/tv_email_message"
        app:layout_constraintEnd_toStartOf="@id/guideline7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/ll_1" />

    <TextView
        android:id="@+id/tv_email_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/left_space"
        android:fontFamily="@font/gill_sans"
        android:text="Year to Date"
        android:textSize="@dimen/Fifteen_dp"
        android:textColor="@color/grey_medium"
        app:layout_constraintBottom_toTopOf="@+id/tv_bh_percentage"
        app:layout_constraintEnd_toStartOf="@id/guideline7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/tv_bhours" />

    <TextView
        android:id="@+id/tv_bh_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/left_space"
        android:fontFamily="@font/gill_sans"
        android:text="72%"
        android:textColor="@color/black"
        android:textSize="@dimen/thirty_dp"
        app:layout_constraintTop_toBottomOf="@id/ll_1"
        app:layout_constraintEnd_toStartOf="@id/guideline7"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toEndOf="@+id/guideline8"
        app:layout_constraintBottom_toTopOf="@id/tv_email_message" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.23" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="336dp" />
</androidx.constraintlayout.widget.ConstraintLayout>