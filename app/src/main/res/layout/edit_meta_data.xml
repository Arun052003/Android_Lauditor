<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_add_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/Blue_text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/close_edit_docs"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/cancel_icon"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/Fifteen_dp"
            android:visibility="visible">

        </ImageView>

        <TextView
            android:id="@+id/header_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:padding="10dp"
            android:text="Edit Meta Data"
            android:textColor="@color/white"
            android:textSize="@dimen/Fifteen_dp"
            android:visibility="visible">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tag_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/ll_tag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_add_tag"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <include layout="@layout/group_layout"
                android:id="@+id/tv_document_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <include layout="@layout/icon"/>

        </LinearLayout>

        \
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tv_edit_doc_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"


            android:gravity="top"
            app:boxBackgroundMode="none"
            android:textColorHint="@color/black"



            >



            <include layout="@layout/group_name_layout"
                android:id="@+id/edit_doc_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:maxLength="80"

                android:layout_weight="1"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <include layout="@layout/group_layout"
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <include layout="@layout/icon"/>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tv_edit_description"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="top"

            android:layout_weight="1"


            android:gravity="top"
            app:boxBackgroundMode="none"

            >

            <include layout="@layout/group_name_layout"
                android:id="@+id/edit_description"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:maxLength="300"
                android:layout_height="150dp" />



        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <include layout="@layout/group_layout"

                android:id="@+id/expiration_date_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>




        </LinearLayout>




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/tv_expiration_date"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:drawableRight="@drawable/calendar_activity"
            android:fontFamily="sans-serif-condensed-medium"
            android:hint="@string/expiration_date"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:gravity="left"
            android:textSize="@dimen/Fifteen_dp" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_tag"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        </LinearLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:orientation="horizontal"

            >



            <include layout="@layout/cancel_button"
                android:id="@+id/btn_cancel_edit_docs"
                />
            <include layout="@layout/submit_button"
                android:id="@+id/btn_save_tag"
                />




        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>