<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_documents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:background="@drawable/rectangle_grey_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029">
        <TextView
            android:id="@+id/tv_tm_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_margin="10dp"

            android:layout_weight="1"
            android:gravity="start"
            android:layout_gravity="center"
            android:padding="5dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Date"
            android:textSize="@dimen/Fifteen_dp"
            android:textColor="@color/black"/>
        <ImageButton
            android:id="@+id/iv_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/dark_grey"
            android:layout_marginTop="2dp"
            android:layout_margin="10dp"
            android:src="@drawable/view_document">

        </ImageButton>
        <CheckBox
            android:id="@+id/chk_selected"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingEnd="20dp"
            android:layout_margin="10dp"

            android:buttonTint="@color/Blue_text_color"
            android:background="@color/white"
            android:layout_gravity="center"

            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>