<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5sp"
    android:gravity="center"
    android:background="@color/Blue_text_color"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_notification_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:padding="5dp"
            android:text="Notifications"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/Blue_text_color"
            android:orientation="horizontal">
            <include
                android:id="@+id/et_Search"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                layout="@layout/searchelement_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"

                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />



        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="right"
        android:padding="5dp"
        android:background="@color/Blue_text_color"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ib_read"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginBottom="2dp"

            android:padding="2dp"
            android:text="Read"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@android:color/white"

             />

        <ImageView
            android:id="@+id/btn_delete_all"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_marginBottom="2dp"

android:layout_weight="1"
            android:padding="2dp"
            android:src="@drawable/delete_white_icon"
            android:contentDescription="@string/app_name"/>



        <CheckBox
            android:id="@+id/chk_select_all"
            android:layout_width="40dp"
            android:layout_height="40dp"
           android:layout_weight="1"
            android:outlineSpotShadowColor="@color/green_color"
            android:buttonTint="@color/white"
            android:buttonTintMode="src_atop"
            android:bufferType="spannable"

            android:shadowColor="@color/white"
android:outlineAmbientShadowColor="@color/Blue_text_color"
            android:background="@color/Blue_text_color"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:textSize="22dp"
            />
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sub_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_header"
        android:orientation="horizontal">


      <include layout="@layout/recyclerview"
          android:id="@+id/rv_list1"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
