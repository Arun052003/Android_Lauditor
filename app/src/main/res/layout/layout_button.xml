<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_button"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="@dimen/small_size">


    <!--Card view for buttons-->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/left_space"
        android:layout_marginTop="@dimen/left_space"
        android:layout_marginEnd="@dimen/twenty_dp"
        android:layout_marginBottom="@dimen/left_space"
        android:background="@drawable/background_transparent"
        app:cardCornerRadius="8dp"
        app:cardElevation="@dimen/left_space">

        <!--Cancel button-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Cancel"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/dark_grey"
            android:elevation="@dimen/small_size"
            android:fontFamily="@font/gill_sans"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="@dimen/Fifteen_dp"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>

    <!--Cardview for submit button-->

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/left_space"
        android:background="@drawable/background_transparent"
        app:cardCornerRadius="8dp"
        app:cardElevation="@dimen/left_space">

        <!--Submit button-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Submit"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/rectangular_complete_blue_background"
            android:elevation="@dimen/small_size"
            android:fontFamily="@font/gill_sans"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="@dimen/Fifteen_dp"
            tools:ignore="TouchTargetSizeCheck" />
    </androidx.cardview.widget.CardView>
</LinearLayout>