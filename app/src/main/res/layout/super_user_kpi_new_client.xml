<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_size"
    android:background="@drawable/dashboard_screens_background"
    android:padding="@dimen/small_size">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/Fifty_dp"
        android:layout_height="@dimen/Fifty_dp"
        android:layout_gravity="center"
        android:contentDescription="@string/todo"
        android:src="@drawable/new_clients"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ll_3"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@id/imageView5"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/gill_sans"
            android:gravity="start"
            android:padding="@dimen/left_space"
            android:text="New Clients"
            android:textColor="@color/Blue_text_color"
            android:textSize="@dimen/thirty_dp" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/imageView5"
        app:layout_constraintTop_toBottomOf="@id/ll_3"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:gravity="start"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_newclients_legal_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:fontFamily="@font/gill_sans"
                android:padding="@dimen/left_space"
                android:text="128"
                android:textColor="@color/green_count_color"
                android:textSize="@dimen/Fifty_dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/tv_first_client_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:fontFamily="@font/gill_sans"
                android:gravity="bottom"
                android:padding="@dimen/left_space"
                android:text="GB"
                android:textColor="@color/black"
                android:textSize="@dimen/Fifteen_dp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/twenty_five"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_newclients_civil_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:fontFamily="@font/gill_sans"
                android:padding="@dimen/left_space"
                android:text="4"
                android:textColor="@color/green_count_color"
                android:textSize="@dimen/Fifty_dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/tv_second_client_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:fontFamily="@font/gill_sans"
                android:gravity="center"
                android:padding="@dimen/left_space"
                android:text="GB"
                android:textColor="@color/black"
                android:textSize="@dimen/Fifteen_dp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>