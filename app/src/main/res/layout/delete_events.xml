<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangular_white_background"

    android:orientation="vertical"
    >




    <!--   Default RadioButtons  -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_margin="@dimen/small_size"
        android:background="@color/Blue_text_color"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_close_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:gravity="center"
            android:padding="@dimen/small_size"
            android:src="@drawable/ic_arrow_left"
            android:text="Close"
            android:textColor="@color/cardview_dark_background"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_addReminder"
            android:layout_width="100dp"
            android:layout_height="match_parent"

            android:fontFamily="@font/gill_sans"
            android:gravity="center_vertical"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/gill_sans"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_dp" />

        <Button
            android:id="@+id/delete_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:fontFamily="@font/gill_sans"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="normal" />

    </LinearLayout>


    <!--   Customized RadioButtons  -->


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_size"
        android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/radio_delete_only_this"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Delete only this event"
            android:layout_marginTop="@dimen/small_size"
            android:checked="false"
            android:textSize="@dimen/twenty_dp" />

        <RadioButton
            android:id="@+id/radio_delete_all"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Delete all events"
            android:layout_marginTop="@dimen/twenty_dp"
            android:checked="false"

            android:textSize="@dimen/twenty_dp" />
        <RadioButton
            android:id="@+id/radio_delete_ts_fe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Delete this and following events"
            android:layout_marginTop="@dimen/twenty_dp"
            android:checked="false"

            android:textSize="@dimen/twenty_dp" />
    </RadioGroup>


</LinearLayout>