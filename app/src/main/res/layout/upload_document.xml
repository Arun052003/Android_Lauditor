<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/upload_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="50dp"
            android:paddingTop="@dimen/twenty_dp"
            android:paddingEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.593"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.013">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/upload_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@color/green_count_color"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:src="@mipmap/upload_icon_black"
                    android:text="@string/create_group"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Fifteen_dp"
                    app:shapeAppearanceOverlay="@style/Circula">

                </com.google.android.material.imageview.ShapeableImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/upload_icon"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:text="Upload">

                </TextView>

            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/view_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@color/green_count_color"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:src="@mipmap/eye_icon_black"
                    android:text="@string/create_group"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Fifteen_dp"
                    app:shapeAppearanceOverlay="@style/Circula">

                </com.google.android.material.imageview.ShapeableImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_icon"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:text="View">

                </TextView>

            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>



        <LinearLayout
            android:id="@+id/ll_upload_docs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/upload_view"
            app:layout_constraintVertical_bias="0.0">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/client_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="50dp"
                android:paddingTop="@dimen/twenty_dp"
                android:paddingEnd="50dp"
            >

                <TextView
                    android:id="@+id/tv_client"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_left_background"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="10dp"
                    android:text="Client"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Fifteen_dp">

                </TextView>

                <TextView
                    android:id="@+id/tv_firm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:background="@drawable/button_right_background"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:padding="10dp"
                    android:text="Firm"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Fifteen_dp">

                </TextView>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_client_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:elevation="50dp"
                android:padding="5dp"
                android:visibility="visible"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:id="@+id/ll_client_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="Client Name"
                                android:textColor="@color/Blue_text_color"
                                android:textSize="@dimen/Fifteen_dp">

                            </TextView>

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="10dp"
                                android:src="@drawable/asterisk_icon">

                            </ImageView>

                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/search_tm"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_grey_background"
                            android:textColorHint="@color/black"
                            app:boxBackgroundMode="none">

                            >

                            <Spinner
                                android:id="@+id/at_search_client"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:spinnerMode="dropdown" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_matter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/ll_client_name"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="Matter"
                                android:textColor="@color/Blue_text_color"
                                android:textSize="@dimen/Fifteen_dp">

                            </TextView>

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="10dp"
                                android:src="@drawable/asterisk_icon">

                            </ImageView>

                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tl_matter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_grey_background"
                            android:textColorHint="@color/black"
                            app:boxBackgroundMode="none">


                            <Spinner
                                android:id="@+id/sp_matter"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"

                                android:spinnerMode="dropdown" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_groups"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/ll_matter"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="Select Groups"
                                android:textColor="@color/Blue_text_color"
                                android:textSize="@dimen/Fifteen_dp">

                            </TextView>

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="10dp"
                                android:src="@drawable/asterisk_icon">

                            </ImageView>

                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle_grey_background"
                            android:textColorHint="@color/black"
                            app:boxBackgroundMode="none">


                            <TextView
                                android:id="@+id/tv_select_groups"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:enabled="true"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:padding="15dp"
                                android:text="Select Groups"
                                android:textColor="@color/Blue_text_color"
                                android:textSize="15dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_category"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/ll_groups"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="Catergory"
                                android:textColor="@color/Blue_text_color"
                                android:textSize="@dimen/Fifteen_dp">

                            </TextView>

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="10dp"
                                android:src="@drawable/asterisk_icon">

                            </ImageView>

                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_grey_background"
                            android:textColorHint="@color/black"
                            app:boxBackgroundMode="none">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tv_category"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:enabled="false"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:hint="@string/category"
                                android:textColor="@color/Blue_text_color"
                                android:textSize="15dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_select_doc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/ll_category"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="Select Document(s)"
                                android:textColor="@color/Blue_text_color"
                                android:textSize="@dimen/Fifteen_dp">

                            </TextView>

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="10dp"
                                android:src="@drawable/asterisk_icon">

                            </ImageView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tl_selected_file"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ll_client_name"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@drawable/rectangle_grey_background"
                                android:gravity="center"
                                android:hint="Search Documents"
                                android:textColorHint="@color/black"
                                app:boxBackgroundMode="none">


                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/tv_selected_file"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:enabled="false"
                                    android:fontFamily="sans-serif-condensed-medium"
                                    android:textColor="@color/Blue_text_color"
                                    android:textSize="15dp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <Button
                                android:id="@+id/btn_browse"
                                android:layout_width="200dp"
                                android:layout_height="70dp"
                                android:layout_margin="5dp"
                                android:layout_weight="0.7"
                                android:text="Browse">

                            </Button>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/ll_hide_doc_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_client_details">

                <RelativeLayout
                    android:id="@+id/rl_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_client_details">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/tag_meta"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingEnd="30dp"

                        >

                        <TextView
                            android:id="@+id/tv_add_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/button_left_background"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:gravity="center"

                            android:padding="10dp"
                            android:text="Add Tag"
                            android:textColor="@color/black"
                            android:textSize="@dimen/Fifteen_dp">

                        </TextView>

                        <TextView
                            android:id="@+id/tv_edit_meta"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/button_right_background"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Edit Meta"
                            android:textColor="@color/black"
                            android:textSize="@dimen/Fifteen_dp">

                        </TextView>

                        <CheckBox
                            android:id="@+id/chk_select_all"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/checkbox_background"
                            android:buttonTint="@color/grey_color_dark"

                            android:text="@string/select_all" />
                    </androidx.appcompat.widget.LinearLayoutCompat>


                </RelativeLayout>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingEnd="30dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintBottom_toTopOf="@id/cv_details_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.145"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rl_buttons"
                    app:layout_constraintVertical_bias="0.0">

                    <TextView
                        android:id="@+id/tv_enable_download"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/button_left_background"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Enable Download"
                        android:textColor="@color/black"
                        android:textSize="@dimen/Fifteen_dp">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_disable_download"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/button_right_background"
                        android:fontFamily="sans-serif-condensed-medium"

                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Disable Download"
                        android:textColor="@color/black"
                        android:textSize="@dimen/Fifteen_dp">

                    </TextView>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_details_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="10dp"
                    android:padding="10dp"
                    android:visibility="visible"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rl_buttons">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/linearLayoutCompat2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:paddingBottom="30dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Select Head of the Practice"
                            android:textColor="@color/Blue_text_color"
                            android:textSize="@dimen/twenty_dp"
                            android:visibility="gone">

                        </TextView>

                        <TextView
                            android:id="@+id/group_head_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/rectangle_grey_background"
                            android:drawableLeft="@drawable/person_image_email"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/Fifteen_dp"
                            android:visibility="gone">

                        </TextView>

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_documents"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:layout_margin="10dp"
                                android:orientation="vertical" />
                        </ScrollView>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/ll_buttons"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_cancel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"

                                android:background="@drawable/cancel_button_background"
                                android:elevation="20dp"
                                android:text="@string/cancel"
                                android:textAllCaps="false">

                            </androidx.appcompat.widget.AppCompatButton>

                            <Button
                                android:id="@+id/btn_upload"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:background="@drawable/save_button_background"

                                android:elevation="@dimen/Fifteen_dp"
                                android:text="@string/upload"
                                android:textAllCaps="false"

                                android:textColor="@color/white" />

                            <Button
                                android:id="@+id/btn_add_tag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:background="@drawable/save_button_background"
                                android:elevation="@dimen/Fifteen_dp"
                                android:text="@string/add_tag"
                                android:textAllCaps="false"
                                android:textColor="@color/white"

                                android:visibility="gone">

                            </Button>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_view_docs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/upload_view">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                >

                <TextView
                    android:id="@+id/tv_client_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/button_left_background"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Client"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Fifteen_dp">

                </TextView>

                <TextView
                    android:id="@+id/tv_firm_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/tv_client_view"
                    android:layout_weight="1"
                    android:background="@drawable/button_right_background"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Firm"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Fifteen_dp">

                </TextView>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/checkbox_background"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Merge PDF"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Fifteen_dp">

                </TextView>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_view_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:elevation="50dp"
                android:padding="5dp"
                android:visibility="visible"
                app:cardCornerRadius="5dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:id="@+id/ll_client_name_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_name_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Client Name"
                            android:textColor="@color/Blue_text_color"
                            android:textSize="@dimen/Fifteen_dp">

                        </TextView>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/search_client"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_grey_background"
                            android:textColorHint="@color/black"
                            app:boxBackgroundMode="none">

                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tv_search_client"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:enabled="true"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:padding="15dp"
                                android:text="Client Name"
                                android:textColor="@color/Blue_text_color"
                                android:textSize="15dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_matter_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/ll_client_name_view"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Matter"
                            android:textColor="@color/Blue_text_color"
                            android:textSize="@dimen/Fifteen_dp">

                        </TextView>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tl_matter_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_grey_background"
                            android:textColorHint="@color/black"
                            app:boxBackgroundMode="none">


                            <Spinner
                                android:id="@+id/sp_matter_view"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"

                                android:spinnerMode="dropdown" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_document_type_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/ll_matter_view"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="@string/select_document_type"
                                android:textColor="@color/Blue_text_color"
                                android:textSize="@dimen/Fifteen_dp">

                            </TextView>

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="10dp"
                                android:src="@drawable/asterisk_icon">

                            </ImageView>

                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rectangle_grey_background"
                            android:textColorHint="@color/black"
                            app:boxBackgroundMode="none">


                            <Spinner
                                android:id="@+id/sp_document_type_view"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_weight="1"

                                android:spinnerMode="dropdown" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_search_client_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_document_type_view"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <com.google.android.material.textfield.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle_grey_background"
                            android:textColorHint="@color/black"
                            app:boxBackgroundMode="none">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tv_search_client_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:drawableRight="@drawable/search_groups"
                                android:enabled="false"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:hint="@string/search"
                                android:textColor="@color/Blue_text_color"
                                android:textSize="15dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_view_documents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:elevation="50dp"
                android:padding="5dp"
                android:visibility="visible"
                app:cardCornerRadius="5dp"
                >



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_display_view_docs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/rectangle_right_background"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>