<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/upload_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Fifteen_dp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/Fifty_dp"
            android:paddingTop="@dimen/twenty_dp"
            android:paddingEnd="@dimen/Fifty_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/upload_icon"
                    android:layout_width="@dimen/sixty_dp"
                    android:layout_height="@dimen/sixty_dp"
                    android:background="@color/white"
                    android:fontFamily="@font/gill_sans"
                    android:src="@mipmap/uploadwhiteupload1"
                    android:text="@string/create_group"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Fifteen_dp"
                    app:shapeAppearanceOverlay="@style/Circula" />

                <include
                    android:id="@+id/upload_name"
                    layout="@layout/group_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/upload_icon"
                    android:layout_marginStart="@dimen/small_size"
                    android:layout_marginTop="@dimen/left_space"
                    android:layout_marginEnd="@dimen/left_space" />

            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/view_icon"
                    android:layout_width="@dimen/sixty_dp"
                    android:layout_height="@dimen/sixty_dp"
                    android:background="@color/white"
                    android:fontFamily="@font/gill_sans"
                    android:src="@mipmap/eye_whitebackground_icon"
                    android:text="@string/create_group"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Fifteen_dp"
                    app:shapeAppearanceOverlay="@style/Circula">

                </com.google.android.material.imageview.ShapeableImageView>

                <include
                    android:id="@+id/view_name"
                    layout="@layout/group_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_icon"
                    android:layout_marginStart="@dimen/Fifteen_dp"
                    android:layout_marginTop="@dimen/left_space"
                    android:layout_marginEnd="@dimen/left_space" />

            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <LinearLayout
            android:id="@+id/ll_upload_docs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/upload_view"
            app:layout_constraintVertical_bias="0.0">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/client_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/Fifty_dp"
                android:paddingTop="@dimen/twenty_dp"
                android:paddingEnd="@dimen/Fifty_dp">

                <include
                    android:id="@+id/tv_client"
                    layout="@layout/createmember_layout" />

                <include
                    android:id="@+id/tv_firm"
                    layout="@layout/viewmember_layout" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_client_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Fifteen_dp"
                android:elevation="@dimen/Fifty_dp"
                android:padding="@dimen/left_space"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/left_space">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_size">

                    <LinearLayout
                        android:id="@+id/ll_client_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/left_space"
                            android:layout_marginTop="@dimen/small_size"
                            android:orientation="horizontal">

                            <include
                                android:id="@+id/tv_name"
                                layout="@layout/group_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/small_size" />
                            <!--                            android:text="Client Name"-->

                            <include layout="@layout/astrick_layout" />

                        </LinearLayout>


                        <include
                            android:id="@+id/custom_spinner"
                            layout="@layout/spinner_text_view" />

                        <include
                            android:id="@+id/list_client"
                            layout="@layout/spinner_list"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginStart="@dimen/left_space"
                            android:layout_marginEnd="@dimen/left_space" />

                        <!--                            <include-->
                        <!--                                android:id="@+id/at_search_client"-->
                        <!--                                layout="@layout/spinner_layout" />-->

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_matter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/ll_client_name"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <include
                            android:id="@+id/tv_matter"
                            layout="@layout/group_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/left_space"
                            android:layout_marginTop="@dimen/small_size"
                            android:layout_marginBottom="@dimen/small_size" />
                        <!--                            android:text="Client Name"-->

                        <include
                            android:id="@+id/custom_spinner2"
                            layout="@layout/spinner_text_view" />

                        <include
                            android:id="@+id/list_matter"
                            layout="@layout/spinner_list"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginStart="@dimen/left_space"
                            android:layout_marginEnd="@dimen/left_space" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_groups"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/ll_matter"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/left_space"
                            android:layout_marginTop="@dimen/small_size"
                            android:orientation="horizontal">

                            <include
                                android:id="@+id/tv_select_group_name"
                                layout="@layout/group_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/left_space" />

                            <include layout="@layout/astrick_layout" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_select_groups"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/left_space"
                            android:layout_marginTop="@dimen/small_size"
                            android:layout_marginEnd="@dimen/left_space"
                            android:background="@drawable/rectangle_light_grey_bg"
                            android:fontFamily="@font/gill_sans"
                            android:padding="@dimen/Fifteen_dp"
                            android:text="@string/select_groups"
                            android:textColor="@color/black"
                            android:textSize="@dimen/Fifteen_dp"
                            app:drawableRightCompat="@drawable/down_arrow" />

                        <LinearLayout
                            android:id="@+id/upload_group_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <include
                                android:id="@+id/rv_display_upload_groups_docs"
                                layout="@layout/recyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_marginStart="@dimen/left_space"
                                android:layout_marginEnd="@dimen/left_space" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small_size"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <include
                                    android:id="@+id/btn_group_cancel"
                                    layout="@layout/cancel_button" />

                                <include
                                    android:id="@+id/btn_group_submit"
                                    layout="@layout/submit_button" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_category"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/ll_groups"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <include
                            android:id="@+id/category_name"
                            layout="@layout/group_layout" />

                        <include
                            android:id="@+id/tv_category"
                            layout="@layout/group_name_layout" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_select_doc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/ll_category"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small_size"
                            android:orientation="horizontal">

                            <include
                                android:id="@+id/select_documents"
                                layout="@layout/group_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/left_space" />

                            <include layout="@layout/astrick_layout" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/eight_dp"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <include
                                android:id="@+id/tv_selected_file"
                                layout="@layout/select_doc_layout" />

                            <include
                                android:id="@+id/btn_browse"
                                layout="@layout/submit_button"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/Fifty_dp"
                                android:layout_gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/ll_hide_doc_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_client_details">

                <RelativeLayout
                    android:id="@+id/rl_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/twenty_dp"
                    android:layout_marginTop="@dimen/small_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_client_details">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/tag_meta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/left_space">

                        <include
                            android:id="@+id/tv_add_tag"
                            layout="@layout/createmember_layout" />

                        <include
                            android:id="@+id/tv_edit_meta"
                            layout="@layout/viewmember_layout" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="end">

                            <include
                                layout="@layout/check_select_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="@dimen/left_space" />
                        </LinearLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </RelativeLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_download"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_size"
                    android:orientation="horizontal"
                    android:padding="@dimen/small_size"
                    app:layout_constraintBottom_toTopOf="@id/cv_details_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.145"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rl_buttons"
                    app:layout_constraintVertical_bias="0.0">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:orientation="horizontal">

                        <include
                            android:id="@+id/tv_enable_download"
                            layout="@layout/createmember_layout" />

                        <include
                            android:id="@+id/tv_disable_download"
                            layout="@layout/viewmember_layout" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="-20dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <include
                            android:id="@+id/tv_enable_encryption"
                            layout="@layout/createmember_layout" />

                        <include
                            android:id="@+id/tv_disable_encryption"
                            layout="@layout/viewmember_layout" />
                    </LinearLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_details_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_size"
                    android:elevation="@dimen/small_size"
                    android:padding="@dimen/small_size"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/small_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rl_buttons">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/linearLayoutCompat2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/left_space"
                        android:orientation="vertical"
                        android:padding="@dimen/left_space"
                        android:paddingBottom="@dimen/thirty_dp">


                        <!--                        <TextView-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:fontFamily="@font/gill_sans"-->
                        <!--                            android:text="Select Head of the Practice"-->
                        <!--                            android:textColor="@color/Blue_text_color"-->
                        <!--                            android:textSize="@dimen/twenty_dp"-->
                        <!--                            android:visibility="gone">-->

                        <!--                        </TextView>-->

                        <!--                        <TextView-->
                        <!--                            android:id="@+id/group_head_name"-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_margin="@dimen/small_size"-->
                        <!--                            android:background="@drawable/rectangle_grey_background"-->
                        <!--                            android:drawableLeft="@drawable/person_image_email"-->
                        <!--                            android:fontFamily="@font/gill_sans"-->
                        <!--                            android:padding="@dimen/small_size"-->
                        <!--                            android:textColor="@color/black"-->
                        <!--                            android:textSize="@dimen/Fifteen_dp"-->
                        <!--                            android:visibility="gone">-->

                        <!--                        </TextView>-->

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_documents"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/small_size"
                                android:orientation="vertical" />
                        </ScrollView>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/ll_buttons"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/small_size"
                            android:orientation="horizontal">

                            <include
                                android:id="@+id/btn_cancel"
                                layout="@layout/cancel_button"

                                />

                            <include
                                android:id="@+id/btn_upload"
                                layout="@layout/submit_button" />

                            <include
                                android:id="@+id/btn_add_tag"
                                layout="@layout/submit_button" />

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_view_docs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/upload_view"
            app:layout_constraintVertical_bias="0.0">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/view_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/left_space"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <include
                        android:id="@+id/tv_client_view"
                        layout="@layout/createmember_layout" />

                    <include
                        android:id="@+id/tv_firm_view"
                        layout="@layout/viewmember_layout" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="end">

                    <include
                        android:id="@+id/merge_pdf"
                        layout="@layout/createmember_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/Twelve_dp" />
                </LinearLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_view_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Fifteen_dp"
                android:elevation="@dimen/Fifty_dp"
                android:padding="@dimen/left_space"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/left_space">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_size">

                    <LinearLayout
                        android:id="@+id/ll_client_name_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small_size"
                            android:layout_marginBottom="@dimen/small_size"
                            android:orientation="horizontal">

                            <include
                                android:id="@+id/tv_name_view"
                                layout="@layout/group_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <include layout="@layout/astrick_layout" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/client_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="3dp"
                            android:layout_weight=".28"
                            android:background="@drawable/background_transparent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <include
                                android:id="@+id/custom_spinner3"
                                layout="@layout/spinner_text_view" />

                            <include
                                android:id="@+id/list_client_view"
                                layout="@layout/spinner_list"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_marginStart="@dimen/left_space"
                                android:layout_marginEnd="@dimen/left_space" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_matter_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/ll_client_name_view"
                        android:orientation="vertical">


                        <include
                            android:id="@+id/matter_name"
                            layout="@layout/group_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/small_size"
                            android:layout_marginBottom="@dimen/small_size" />


                        <include
                            android:id="@+id/custom_spinner4"
                            layout="@layout/spinner_text_view" />

                        <include
                            android:id="@+id/list_matter_view"
                            layout="@layout/spinner_list"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginStart="@dimen/left_space"
                            android:layout_marginEnd="@dimen/left_space" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_document_type_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/ll_matter_view"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small_size"
                            android:layout_marginBottom="@dimen/small_size"
                            android:orientation="horizontal">

                            <include
                                android:id="@+id/select_doc_type"
                                layout="@layout/group_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <include layout="@layout/astrick_layout" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_select_groups_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/left_space"
                            android:layout_marginEnd="@dimen/left_space"
                            android:background="@drawable/rectangle_light_grey_bg"
                            android:drawableRight="@drawable/down_arrow"
                            android:enabled="true"
                            android:fontFamily="@font/gill_sans"
                            android:padding="@dimen/Fifteen_dp"
                            android:text="@string/select_groups"
                            android:textColor="@color/black"
                            android:textSize="@dimen/Fifteen_dp" />

                        <LinearLayout
                            android:id="@+id/view_group_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <include
                                android:id="@+id/rv_display_view_groups_docs"
                                layout="@layout/recyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_marginStart="@dimen/left_space"
                                android:layout_marginEnd="@dimen/left_space" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/small_size"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <include
                                    android:id="@+id/btn_group_view_cancel"
                                    layout="@layout/cancel_button" />

                                <include
                                    android:id="@+id/btn_group_view_submit"
                                    layout="@layout/submit_button" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_categories_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/ll_document_type_view"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <include
                            android:id="@+id/category_name_id"
                            layout="@layout/group_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/small_size"
                            android:layout_marginBottom="@dimen/small_size" />

                        <include
                            android:id="@+id/tv_category_name"
                            layout="@layout/group_name_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_search_client_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_categories_layout"
                        android:layout_marginTop="@dimen/small_size"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <com.google.android.material.textfield.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:background="@drawable/rectangle_light_grey_bg"
                            android:hint="Search "
                            android:textColorHint="@color/black">

                            <include
                                android:id="@+id/tv_search_client_view"
                                layout="@layout/search_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_search_client_views"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_search_client_view"
                        android:layout_marginTop="@dimen/small_size"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <com.google.android.material.textfield.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:background="@drawable/rectangle_light_grey_bg"
                            android:hint="Search "
                            android:textColorHint="@color/black">

                            <include
                                android:id="@+id/tv_search_client_views"
                                layout="@layout/search_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_view_documents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Fifteen_dp"
                android:elevation="@dimen/Fifty_dp"
                android:padding="@dimen/left_space"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/left_space">

                <include
                    android:id="@+id/rv_display_view_docs"
                    layout="@layout/recyclerview" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
